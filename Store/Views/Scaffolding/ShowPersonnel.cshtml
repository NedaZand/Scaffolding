            //        }
            //    }
            //],
            "ajax": {
                "url": "/Scaffolding/PersonnelList?workorderId=@Model.WorkOrderId",
                "type": "get",

            },
            "columns": [

                { "data": "PersonnelCode", "orderable": false },

                { "data": "NameFamily", "orderable": false },

                { "data": "WorkgroupTitle", "orderable": false },

                { "data": "WorkorderTitle", "orderable": false },


            ],
            "columnDefs": [



            ],

            "order": []
        });


    });

    function Remove(id) {
        swal({
            title: "رکورد حذف شود؟",
            text: " درصورت حذف شما نمیتوانید این رکورد را بازیابی کنید!",
            type: "warning",
            showCancelButton: true,
            confirmButtonColor: "#1ab394",
            confirmButtonText: "بله",
            cancelButtonText: "خیر",
            closeOnConfirm: false,
            closeOnCancel: false
        },
            function (isConfirm) {

                if (isConfirm) {
                    $.ajax({
                        url: '/scaffolding/Delete',
                        data: { id: id },
                        type: 'Post',

                        dataType: "json",
                        success: function (data) {
                            if (data.ResultType == 0) {
                                swal("حذف شد!", data.Message, "success");
                                $('#scaffoldingGrid').DataTable().ajax.reload();
                            }
                            else if (data.ResultType == 1) {

                                swal("خطا", "امکان حذف رکورد وجود ندارد!", "error");
                            }
                            else if (data.ResultType == 2) {

                                swal("فاقد مجوز دسترسی", data.Message, "error");
                            }


                        }


                    });

                } else {
                    swal("کنسل", "حذف کنسل شد :)", "error");
                }
            });

    };
    </script>

}

