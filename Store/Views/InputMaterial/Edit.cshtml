@model Store.Models.Stores.StoreRoom.InputMaterialModel
@{
    ViewBag.Title = "ویرایش تجهیزات ورودی";

}




<div class="row bg-title">
    <div class="col-lg-3 col-md-4 col-12">
        <h4 class="page-title">فرم ویرایش  ورودی انبار</h4>
    </div>
    <div class="col-lg-9 col-md-8 col-12">

        <ol class="breadcrumb">
            <li><a href="/Home/Index">داشبورد</a></li>
            <li><a href="/InputMaterial/Index">نمایش لیست ورودی ها  </a></li>
            <li class="active">ویرایش ورودی </li>
        </ol>
    </div>

</div>
<div class="row">
    <div class="col-md-12">
        <div class="white-box">

            @using (Ajax.BeginForm("Edit", "InputMaterial", null, new AjaxOptions { Url = "/InputMaterial/Edit", HttpMethod = "Post", OnSuccess = "editSuccess" }, new { @enctype = "multipart/form-data", id = "form", @class = "" }))
            {
                @Html.HiddenFor(m => m.Id)

                @Html.AntiForgeryToken()

                @Html.Partial("_CreateorUpdate", Model)

                <div class="form-actions">
                    <button type="submit" class="btn btn-success btn-rounded"> <i class="fa fa-check"></i> ویرایش</button>
                    <a class="btn btn-inverse waves-effect waves-light btn-rounded" href="/InputMaterial/Index"><i class="fa fa-times"></i> بازگشت</a>

                </div>

            }

        </div>
    </div>
</div>


<script>
        $(document).ready(function () {

            var equipSelected = @Html.Raw(Json.Encode(Model.EquipmentId));

            $("#EquipmentId").val(equipSelected).trigger("change");

            var count = @Html.Raw(Json.Encode(Model.Count));
            var defectiveNumber = @Html.Raw(Json.Encode(Model.DefectiveNumber));
            console.log(equipSelected)
            console.log(count)
            console.log(defectiveNumber)
            for (var i = 0; i < equipSelected.length; i++) {
                $('#ModelCount' + equipSelected[i]).val(count[i]);
                $('#ModelDefectiveNumber' + equipSelected[i]).val(defectiveNumber[i]);
            }

        });
</script>