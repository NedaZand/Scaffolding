@model List<Store.Core.Domain.StoreTables.Attendancee.AssignedWorkorder>
@{
    int i = 0;
}
@functions{
    public string ConvertAdToJalali(DateTime ad)
    {
        //DateTime miladi = DateTime.Now;
        System.Globalization.PersianCalendar shamsi = new System.Globalization.PersianCalendar();
        var today = string.Format("{0}/{1}/{2}", shamsi.GetYear(ad).ToString("00"), shamsi.GetMonth(ad), shamsi.GetDayOfMonth(ad));
        return today;

    }

}

<div class="row bg-title">
    <div class="col-lg-3 col-md-4 col-12">
        <h4 class="page-title">لیست دستور کارهای امروز</h4>
    </div>
    <div class="col-lg-9 col-md-8 col-12">
        <a href="#" target="_blank" class="btn btn-danger pull-left m-r-20 btn-rounded btn-outline hidden-xs hidden-sm waves-effect waves-light" style="display:none!important;">خرید قالب</a>
        <ol class="breadcrumb">
            <li><a href="/Home/Index">داشبورد</a></li>
            <li class="active">لیست دستور کار روزانه</li>
        </ol>
    </div>
    <!-- /.col-lg-12 -->
</div>
<!-- .row -->
<div class="row">
    <div class="col-md-12">
        <div class="white-box">
            @if (Model.Count > 0)
            {
                <ul class="timeline">
                    @foreach (var item in Model)
                    {
                        i++;
                        <li class="@(i % 2 == 0 ? "timeline-inverted" : "")">
                            <div class="timeline-badge @(i % 2 == 0 ? "success" : "warning")"><i class="fa fa-check"></i></div>
                            <div class="timeline-panel">
                                <div class="timeline-heading">
                                    <h4 class="timeline-title">@item.WorkOrder.Title</h4>
                                    <p><small class="text-muted"><i class="fa fa-clock-o"></i>@ConvertAdToJalali(item.StartDate) </small> </p>
                                </div>

                                <div class="timeline-body">
                                    <hr />
                                    <div id="modal@(i)" class="modal fade" tabindex="-1" role="dialog" aria-labelledby="myModalLabel" aria-hidden="true">
                                        <div class="modal-dialog">
                                            <div class="modal-content">
                                                @*<div class="modal-header">
                                                        <button type="button" class="close" data-dismiss="modal" aria-hidden="true">×</button>
                                                        <h4 class="modal-title" id="myModalLabel">عنوان مودال</h4>
                                                    </div>*@
                                                <div class="modal-body">
                                                    <div class="table-responsive">
                                                        <table class="table table-striped color-table danger-table">
                                                            <thead>
                                                                <tr>
                                                                    <th></th>
                                                                    <th>نام </th>
                                                                    <th>کد پرسنلی</th>
                                                                </tr>
                                                            </thead>
                                                            <tbody>
                                                                @foreach (var detail in item.Details.Where(x => x.Date.Date == DateTime.Now.Date).ToList())
                                                                {

                                                                    foreach (var user in detail.WorkorderAssignedUsers.ToList())
                                                                    {
                                                                        <tr>
                                                                            <td><img src="/Content/Theme/assets/images/User.jpg" alt="user-img" class="img-circle" width="36"></td>
                                                                            <td>@user.Personnel.UserNameFmaily</td>
                                                                            <td>@user.PersonnelCode</td>

                                                                        </tr>
                                                                    }
                                                                }


                                                            </tbody>
                                                        </table>
                                                    </div>
                                                </div>
                                                <div class="modal-footer">
                                                    <button type="button" class="btn btn-warning btn-circle waves-effect" data-dismiss="modal"><i class="fa fa-times"></i> </button>
                                                    @*<button type="button" class="btn btn-info waves-effect" data-dismiss="modal">بستن</button>*@
                                                </div>
                                            </div>
                                            <!-- /.modal-content -->
                                        </div>
                                        <!-- /.modal-dialog -->
                                    </div>

                                    <p><button data-toggle="modal" data-target="#modal@(i)" class="btn btn-block btn-info waves-effect btn-rounded">مشاهده افراد</button></p>
                                </div>
                            </div>
                        </li>
                    }

                </ul>
            }
            else
            {
                <div class="alert alert-danger alert-dismissable">
                    <button type="button" class="close" data-dismiss="alert" aria-hidden="true">×</button>
                    در حال حاضر در تاریخ امروز روتین اختصاص نیافته است.
                </div>
            }
        </div>
    </div>
</div>
