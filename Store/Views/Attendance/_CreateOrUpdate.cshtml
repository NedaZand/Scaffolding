@model Store.Models.Stores.AttendanceModel
<div class="row">
    <div class="col-lg-12">
        @if (Model.Id == 0)
        {
            <div class="form-group  m-b-40">

                @Html.LabelFor(model => model.PersonnelCode, new { @class = "col-sm-4 col-form-label " })

                @Html.DropDownListFor(model => model.PersonnelCode, Model.PersonnelList, new { @class = "select2 m-b-10 select2-multiple", @multiple = "multiple", @placeholder = "یک یا چند پرسنل را انتخاب نمایید " })
                @Html.ValidationMessageFor(model => model.PersonnelCode)

            </div>
        }
    </div>
</div>


    <div class="row col-lg-12">

        <div class="col-lg-4">
            <div class="form-group  m-b-40">

                @Html.LabelFor(model => model.PresenceStatus, new { @class = "col-sm-12 col-form-label " })

                @Html.DropDownListFor(model => model.PresenceStatus, Model.PresenceStatusList, new { @class = "form-control select2" })


            </div>
        </div>
        <div class="col-lg-4">
            <div class="form-group m-b-40">

                @Html.LabelFor(model => model.Date, new { @class = "col-sm-12 col-form-label " })

                @Html.EditorFor(model => model.Date, new { @class = "form-control", @placeholder = "mm/dd/yyyy" })



            </div>


        </div>
        <div class="col-lg-4">
            <div class="form-group m-b-40">

                @Html.LabelFor(model => model.Time, new { @class = "col-sm-12 col-form-label " })
                @Html.TextBoxFor(model => model.Time, new { @class = "form-control", @type="Time" })



            </div>


        </div>
    </div>

