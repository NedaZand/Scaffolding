@model Store.Models.User.PersonnelModel

<div class="row">

    @if (Model.PersonnelCode != null)
    {
        <div class="col-md-4">
            <div class="form-group m-b-40">

                @Html.LabelFor(model => model.PersonnelCode, new { @class = "col-sm-12 col-form-label " })
                @Html.TextBoxFor(model => model.PersonnelCode, new { required = "کد پرسنلی الزامی است", @class = "form-control", placeholder = "کد پرسنلی را وارد نمایید.", @disabled = "disabled" })
                @Html.ValidationMessageFor(model => model.PersonnelCode)
            </div>

        </div>
    }
    else
    {
        <div class="col-md-4">
            <div class="form-group m-b-40">

                @Html.LabelFor(model => model.PersonnelCode, new { @class = "col-sm-12 col-form-label " })
                @Html.TextBoxFor(model => model.PersonnelCode, new { required = "کد پرسنلی الزامی است", @class = "form-control", placeholder = "کد پرسنلی را وارد نمایید." })
              
            </div>

        </div>
    }

    <div class="col-md-4">
        <div class="form-group m-b-40">
            @Html.LabelFor(model => model.UserNameFmaily, new { @class = "col-sm-12 col-form-label " })
            @Html.TextBoxFor(model => model.UserNameFmaily, new { required = "نام الزامی است", @class = "form-control", placeholder = "نام و نام خانوادگی را وارد نمایید." })
            @Html.ValidationMessageFor(model => model.UserNameFmaily)
        </div>
    </div>
    <div class="col-md-4">
        <div class="form-group  m-b-40">

            @Html.LabelFor(model => model.NationalCode, new { @class = "col-sm-12 col-form-label " })
            @Html.TextBoxFor(model => model.NationalCode, new { @class = "form-control", placeholder = "کد ملی را وارد نمایید." })
            @Html.ValidationMessageFor(model => model.NationalCode)


        </div>
    </div>


</div>
