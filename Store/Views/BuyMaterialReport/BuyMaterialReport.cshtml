@model Store.Models.Stores.StoreRoom.BuyMaterialModel
@{
    ViewBag.Title = " گزارش گیری از متریال خریداری شده ";
}



<div class="row bg-title">
    <div class="col-lg-3 col-md-4 col-12">
        <h4 class="page-title">فرم تهیه گزارش  از متریال خریداری شده</h4>
    </div>
    <div class="col-lg-9 col-md-8 col-12">
        <ol class="breadcrumb">
            <li><a href="/Home/Index">داشبورد</a></li>
            <li class="active">گزارش  متریال خریداری شده </li>
        </ol>
    </div>

</div>
<div class="row">
    <div class="col-md-12">
        <div class="white-box">

            @using (Html.BeginForm("Report", "BuyMaterialReport", FormMethod.Post, new { @enctype = "multipart/form-data", id = "form", @class = "", @target = "_blank" }))
            {

                @Html.AntiForgeryToken()


                <div class="row">
                    <div class="col-md-4">

                        <div class="form-group  m-b-40">

                            @Html.LabelFor(model => model.EquipmentId, new { @class = "col-sm-4 col-form-label " })

                            @Html.DropDownListFor(model => model.EquipmentId, Model.EquipmentList, new { @class = "form-control select2" })


                        </div>


                    </div>
                    <div class="col-md-4">



                        <div class="form-group  m-b-40">
                            @Html.LabelFor(model => model.FromBuyDate, new { @class = "col-sm-4 col-form-label " })

                            @Html.EditorFor(model => model.FromBuyDate, new { @class = "form-control" })


                        </div>



                    </div>
                    <div class="col-md-4">



                        <div class="form-group  m-b-40">
                            @Html.LabelFor(model => model.ToBuyDate, new { @class = "col-sm-4 col-form-label " })

                            @Html.EditorFor(model => model.ToBuyDate, new { @class = "form-control" })


                        </div>



                    </div>
                </div>

                <div class="form-actions">
                    <button type="submit" class="btn btn-info btn-rounded"> <i class="fa fa-print"></i> گزارش</button>
                   
                </div>

            }

        </div>
    </div>
</div>



<script>
        $(document).ready(function () {

            $(".select2").select2();
        });



</script>