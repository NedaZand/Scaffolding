@{
    ViewBag.Title = " گزارش گیری از موجودی تجهیزات ";
}



<div class="row bg-title">
    <div class="col-lg-3 col-md-4 col-12">
        <h4 class="page-title">فرم تهیه گزارش  از موجودی تجهیزات</h4>
    </div>
    <div class="col-lg-9 col-md-8 col-12">
        <ol class="breadcrumb">
            <li><a href="/Home/Index">داشبورد</a></li>
            <li class="active"> گزارش  موجودی تجهیزات انبار </li>
        </ol>
    </div>

</div>
<div class="row">
    <div class="col-md-12">
        <div class="white-box">

            @using (Html.BeginForm("Report", "ReportStock", FormMethod.Post, new { @enctype = "multipart/form-data", id = "form", @class = "", @target = "_blank" }))
            {

                @Html.AntiForgeryToken()


                <div class="row">
                    <div class="col-md-4">

                        <div class="form-group  m-b-40">

                            <label class="col-sm-4 col-form-label"> تجهیزات</label>

                            @Html.DropDownList("equipmentId", (IEnumerable<SelectListItem>)ViewBag.Equipments, new { @class = "form-control select2" })
                         

                        </div>


                    </div>
                </div>

                <div class="form-actions">
                    <button type="submit" class="btn btn-info btn-rounded"> <i class="fa fa-print"></i> گزارش</button>

                </div>

            }

        </div>
    </div>
</div>



<script>
        $(document).ready(function () {

            $(".select2").select2();
        });



</script>