@model Store.Models.User.WorkgroupModel
@{
    ViewBag.Title = "مدیریت گروه کاری";

}



<div class="row bg-title">
    <div class="col-lg-3 col-md-4 col-12">
        <h4 class="page-title"> ویرایش  گروه کاری @Model.Title</h4>
    </div>
    <div class="col-lg-9 col-md-8 col-12">

        <ol class="breadcrumb">
            <li><a href="/Home/Index">داشبورد</a></li>
            <li><a href="/WorkingGroup/Index">نمایش گروه کاری  </a></li>
            <li class="active">ویرایش گروه کاری جدید </li>
        </ol>
    </div>

</div>
<div class="row">
    <div class="col-md-12">
        <div class="white-box">

            @using (Ajax.BeginForm("Edit", "WorkingGroup", null, new AjaxOptions { Url = "/WorkingGroup/Edit", HttpMethod = "Post", OnSuccess = "editSuccess" }, new { @enctype = "multipart/form-data", id = "form", @class = "" }))
            {
                @Html.HiddenFor(m => m.Id)

                @Html.AntiForgeryToken()

                @Html.Partial("_CreateorUpdate", Model)

                <div class="form-actions">
                    <button type="submit" class="btn btn-success btn-rounded"> <i class="fa fa-check"></i> ویرایش</button>
                    <a class="btn btn-inverse waves-effect waves-light btn-rounded" href="/WorkingGroup/Index"><i class="fa fa-times"></i> بازگشت</a>

                </div>

            }

        </div>
    </div>
</div>


<script>
        $(document).ready(function () {



            var personnelSelected = @Html.Raw(Json.Encode(Model.PersonnelIds));

            $("#PersonnelIds").val(personnelSelected).trigger("change");

        });


    </script>