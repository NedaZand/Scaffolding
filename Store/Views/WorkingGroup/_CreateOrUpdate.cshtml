@model Store.Models.User.WorkgroupModel


<div class="row">
    <div class="col-md-4">
        <div class="form-group m-b-40">
            @Html.LabelFor(model => model.Title, new { @class = "col-sm-12 col-form-label " })
            @Html.TextBoxFor(model => model.Title, new { required = "عنوان گروه الزامی است", @class = "form-control", placeholder = "عنوان گروه  را وارد نمایید." })
            @Html.ValidationMessageFor(model => model.Title)
        </div>




      
        
    </div>
    <div class="col-md-8">
        <div class="form-group  m-b-40">

            @Html.LabelFor(model => model.PersonnelIds, new { @class = "col-sm-12 col-form-label " })
            @Html.DropDownListFor(model => model.PersonnelIds, Model.PersonnelList, new { @class = "select2 m-b-10 select2-multiple", @multiple = "multiple", @placeholder = "یک یا چند پرسنل را انتخاب نمایید " })
            @Html.ValidationMessageFor(model => model.PersonnelIds)
          
        </div>
    </div>
</div>
     

<script>
    $(document).ready(function () {

        $(".select2").select2("destroy");
        $(".select2").select2();
    });



</script>